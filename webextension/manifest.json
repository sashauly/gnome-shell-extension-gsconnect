{
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "8",
  "homepage_url": "https://github.com/GSConnect/gnome-shell-extension-gsconnect/wiki",
  "default_locale": "en",
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "icons": {
    "16": "images/gsconnect-16.png",
    "22": "images/gsconnect-22.png",
    "24": "images/gsconnect-24.png",
    "32": "images/gsconnect-32.png",
    "48": "images/gsconnect-48.png",
    "64": "images/gsconnect-64.png",
    "128": "images/gsconnect-128.png",
    "256": "images/gsconnect-256.png"
  },
  "{{chrome}}.action": {
    "default_popup": "popup.html"
  },
  "{{firefox}}.browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "{{chrome}}.service_worker": "js/background.js",
    "type": "module",
    "{{firefox}}.scripts": [
      "js/background.js"
    ]
  },
  "permissions": [
    "nativeMessaging",
    "tabs",
    "activeTab",
    "contextMenus",
    "storage"
  ],
  "{{firefox}}.applications": {
    "gecko": {
      "id": "gsconnect@andyholmes.github.io"
    }
  }
}